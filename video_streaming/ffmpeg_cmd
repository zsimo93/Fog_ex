# capture and save
ffmpeg -f v4l2 -framerate 30 -video_size 1280x720 -i /dev/video0 -c copy -map 0 -segment_time 5 -f segment -vcodec libx264 -reset_timestamps 1 output%03d.ts

#stream to upd
ffmpeg -re -f concat -i playlist.txt -vcodec libx264 -tune zerolatency -b 900k -f mpegts udp://0.0.0.0:1234

#run playlist
ffmpeg -f concat -i playlist.txt


ffplay -i udp://127.0.0.1:1234
